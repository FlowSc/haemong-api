# Development Environment Configuration
NODE_ENV=development
PORT=3000

# Logging
LOG_LEVEL=debug

# Database (Supabase - Development)
SUPABASE_URL=https://your-dev-project.supabase.co
SUPABASE_ANON_KEY=your_dev_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_dev_service_role_key

# JWT Configuration
JWT_SECRET=dev_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=dev_jwt_refresh_secret_key_change_in_production
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration (Development)
GOOGLE_CLIENT_ID=your_dev_google_client_id
GOOGLE_CLIENT_SECRET=your_dev_google_client_secret
APPLE_CLIENT_ID=your_dev_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY_PATH=./keys/dev-apple-private-key.p8

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo

# Replicate API (Video Generation)
REPLICATE_API_TOKEN=your_replicate_api_token

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Rate Limiting (More lenient for development)
RATE_LIMIT_SHORT_TTL=1000
RATE_LIMIT_SHORT_LIMIT=20
RATE_LIMIT_MEDIUM_TTL=60000
RATE_LIMIT_MEDIUM_LIMIT=200
RATE_LIMIT_LONG_TTL=900000
RATE_LIMIT_LONG_LIMIT=2000

# Security Settings
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_VALIDATION=true

# Feature Flags
ENABLE_IMAGE_GENERATION=true
ENABLE_VIDEO_GENERATION=true
ENABLE_PREMIUM_FEATURES=true