# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Logging
LOG_LEVEL=warn

# Database (Supabase - Production)
SUPABASE_URL=https://your-prod-project.supabase.co
SUPABASE_ANON_KEY=your_prod_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_prod_service_role_key

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=CHANGE_THIS_SUPER_SECURE_JWT_SECRET_IN_PRODUCTION
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=CHANGE_THIS_SUPER_SECURE_REFRESH_SECRET_IN_PRODUCTION
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration (Production)
GOOGLE_CLIENT_ID=your_prod_google_client_id
GOOGLE_CLIENT_SECRET=your_prod_google_client_secret
APPLE_CLIENT_ID=your_prod_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY_PATH=./keys/prod-apple-private-key.p8

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# Replicate API (Video Generation)
REPLICATE_API_TOKEN=your_replicate_api_token

# Frontend URL
FRONTEND_URL=https://your-production-domain.com

# Rate Limiting (Strict for production)
RATE_LIMIT_SHORT_TTL=1000
RATE_LIMIT_SHORT_LIMIT=10
RATE_LIMIT_MEDIUM_TTL=60000
RATE_LIMIT_MEDIUM_LIMIT=100
RATE_LIMIT_LONG_TTL=900000
RATE_LIMIT_LONG_LIMIT=1000

# Security Settings
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_VALIDATION=true

# Feature Flags
ENABLE_IMAGE_GENERATION=true
ENABLE_VIDEO_GENERATION=true
ENABLE_PREMIUM_FEATURES=true

# Production Specific Settings
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true